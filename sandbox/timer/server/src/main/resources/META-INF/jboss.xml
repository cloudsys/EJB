<jboss xmlns="http://www.jboss.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee
                            http://www.jboss.org/j2ee/schema/jboss_5_0.xsd"
	version="5.0">
	<enterprise-beans>
		<session>

			<!-- the ejb-name should match up to an ejb-name in the ejb-jar.xml or 
				in the EJB3 annotation @Stateless(name=... -->
			<ejb-name>TimerSampleBean1</ejb-name>

			<!-- This jndi-name is for the Remote interface to the ejb 
			<jndi-name>TimerSampleBean2Remote</jndi-name>-->

			<!-- This local-jndi-name is for the Local interface to the ejb 
			<local-jndi-name>TimerSampleBean2Local</local-jndi-name>-->
		</session>
		<session>

			<!-- the ejb-name should match up to an ejb-name in the ejb-jar.xml or 
				in the EJB3 annotation @Stateless(name=... -->
			<ejb-name>TimerSampleBean2</ejb-name>

			<!-- This jndi-name is for the Remote interface to the ejb 
			<jndi-name>TimerSampleBean2Remote</jndi-name>-->

			<!-- This local-jndi-name is for the Local interface to the ejb 
			<local-jndi-name>TimerSampleBean2Local</local-jndi-name>-->
		</session>
	</enterprise-beans>
</jboss>
